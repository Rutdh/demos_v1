{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Active C++ File (g++)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "set -euo pipefail; mkdir -p \"${workspaceFolder}/build/single\"; out=\"${workspaceFolder}/build/single/${fileBasenameNoExtension}\"; g++ -std=c++20 -g \"${file}\" -o \"$out\"; \"$out\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "fileLocation": [
                        "absolute"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s*(warning|error):\\s*(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
